<UserControl x:Class="QA40xPlot.Views.ComboUnit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QA40xPlot.Views"
             mc:Ignorable="d" 
             x:Name="MyComboUnit"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Vertical">
        <!--PreviewMouseWheel="OnMouseWheel"-->
        <ComboBox x:Name="cbCombo" Text="{Binding TheText, ElementName=MyComboUnit}" 
                                ToolTip="{Binding TheText, ElementName=MyComboUnit}"
                                IsEditable="True" 
                                ItemsSource="{Binding TheSource, ElementName=MyComboUnit}"
                                MaxWidth="120" MinWidth="80" HorizontalAlignment="Left" />
    </StackPanel>
</UserControl>
