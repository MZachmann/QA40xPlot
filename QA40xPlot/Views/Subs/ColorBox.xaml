<UserControl x:Class="QA40xPlot.Views.ColorBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QA40xPlot.Views"
             mc:Ignorable="d" 
             MinHeight="20" MinWidth="20"
             d:DesignHeight="450" d:DesignWidth="800">
        <Button VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Content=" " Click="DoColor_Click" Background="{Binding Color, RelativeSource={RelativeSource AncestorType=local:ColorBox}}" />
</UserControl>
