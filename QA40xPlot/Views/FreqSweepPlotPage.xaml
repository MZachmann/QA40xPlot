<UserControl x:Class="QA40xPlot.Views.FreqSweepPlotPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:QA40xPlot.Views"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:vm="clr-namespace:QA40xPlot.ViewModels"
             xmlns:local="clr-namespace:QA40xPlot"
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="800">
    <Grid Height="Auto" Width="Auto">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <StackPanel Margin="0,1,1,0">
                <views:StartStop />
                <Expander Header="—— Variables" IsExpanded="{Binding ExpandVars}"  >
                    <Grid Margin="25,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="{Binding LeftWidth}" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <CheckBox Content="Load" IsChecked="{Binding VaryLoad}" Grid.Row="0"  />
                        <CheckBox Content="Gain" IsChecked="{Binding VaryGain}" Grid.Row="1"  />
                        <CheckBox Content="Supply" IsChecked="{Binding VarySupply}" Grid.Row="2"  />
                    </Grid>
                </Expander>
                <Expander Header="—— Generator" IsExpanded="{Binding ExpandGenerator}"  >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="{Binding LeftWidth}" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Label Content="Set _DUT" Target="{Binding ElementName=cbDUT}" HorizontalAlignment="Right" 
                           VerticalAlignment="Center" Grid.Column="0" Grid.Row="0" ToolTip="{Binding DutInfo}"  />
                        <ComboBox  Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="0"  
                              VerticalContentAlignment="Center"
                               ToolTip="{Binding DutDescript}" x:Name="cbDUT" 
                               SelectedValue="{Binding GenDirection}" ItemsSource="{Binding MeasureVoltsFull}"
                               IsEnabled="{Binding IsNotRunning}">
                        </ComboBox>
                        <Label Content="{Binding GenAmpDescript, Mode=OneWay}" Target="{Binding ElementName=cbVolt}" 
                           HorizontalAlignment="Right" VerticalAlignment="Center"  Grid.Column="0" Grid.Row="1" />
                        <ComboBox x:Name="cbVolt" Grid.Column="1" Grid.Row="1"   
                              VerticalContentAlignment="Center"
                              Text="{Binding GenVoltage, Converter={StaticResource VoltUnitConverter}}"
                              IsEditable="True" ItemsSource="{Binding GenVoltages}">
                        </ComboBox>
                        <Button BorderThickness="0,0,0,1" Command="{Binding ShowMenuCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Self}}"
                            Content="{Binding GenVoltageUnits}" VerticalAlignment="Center"  Grid.Row="1" Grid.Column="2">
                        </Button>
                        <Label Content="Amplifier _Load" Target="{Binding ElementName=AmpLoad}"  Grid.Column="0" Grid.Row="3"  />
                        <ComboBox x:Name="AmpLoad" IsEditable="True" Grid.Row="3" Grid.Column="1" MinWidth="80" Text="{Binding AmplifierLoad}" 
                              VerticalContentAlignment="Center"
                      ItemsSource="{Binding Impedances}" />
                        <Label Content="Ohm" Grid.Column="2" Grid.Row="3"  />
                    </Grid>
                </Expander>
                <Expander Header="—— Sweep" IsExpanded="{Binding ExpandSweep}"  >

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="{Binding LeftWidth}" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Label Content="S_tart Frequency" Target="{Binding ElementName=cbSF}"  HorizontalAlignment="Right" VerticalAlignment="Center"  Grid.Column="0" Grid.Row="0"  />
                        <ComboBox IsEditable="True" x:Name="cbSF" Text="{Binding StartFreq}" Grid.Column="1" Grid.Row="0" ItemsSource="{Binding StartFrequencies}"  
                              VerticalContentAlignment="Center"
                              />
                        <Label Content="Hz" Grid.Column="2" Grid.Row="0" VerticalAlignment="Center"  />
                        <Label Content="_End Frequency" Target="{Binding ElementName=cbEF}"  HorizontalAlignment="Right" VerticalAlignment="Center"  Grid.Column="0" Grid.Row="1"  />
                        <ComboBox IsEditable="True" x:Name="cbEF" Text="{Binding EndFreq}" Grid.Column="1" Grid.Row="1"  ItemsSource="{Binding EndFrequencies}"  
                              VerticalContentAlignment="Center"
                              />
                        <Label Content="Hz" Grid.Column="2" Grid.Row="1" VerticalAlignment="Center" />
                        <Label Content="Steps / _Octave" Target="{Binding ElementName=cbStO}"  HorizontalAlignment="Right" VerticalAlignment="Center"  Grid.Column="0" Grid.Row="2"  />
                        <views:UpDownControl x:Name="cbStO" VerticalAlignment="Center"   Value="{Binding StepsOctave}" Minimum="1" Grid.Column="1" Grid.Row="2"  />
                    </Grid>
                </Expander>
                <Expander Header="—— Sampling" IsExpanded="{Binding ExpandSampling}"  >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="{Binding LeftWidth}" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Label Content="_Sample Rate" HorizontalAlignment="Right" VerticalAlignment="Center"  Grid.Row="0" Grid.Column="0"  Target="{Binding ElementName=cbSampleRate}"  />
                        <ComboBox x:Name="cbSampleRate"  Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="0"   
                              VerticalContentAlignment="Center"
                               SelectedValue="{Binding SampleRate}" ItemsSource="{Binding SampleRates}">
                        </ComboBox>
                        <Label Content="_Fft Size" HorizontalAlignment="Right" VerticalAlignment="Center"  Grid.Row="1" Grid.Column="0" Target="{Binding ElementName=cbfftSize}"  />
                        <ComboBox x:Name="cbfftSize"  Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1"   
                              VerticalContentAlignment="Center"
                               SelectedValue="{Binding FftSize}" ItemsSource="{Binding FftSizes}">
                        </ComboBox>
                        <Label Content="_Averages" HorizontalAlignment="Right" VerticalAlignment="Center"  
                           Grid.Column="0" Grid.Row="2" Target="{Binding ElementName=xcaverages}"  />
                        <views:UpDownControl x:Name="xcaverages" Value="{Binding Averages}" 
                           VerticalAlignment="Center" Minimum="1" Maximum="{Binding MaxAverages}"  Grid.Column="1" Grid.Row="2"  />
                    </Grid>
                </Expander>
                <views:SeeGlobals HorizontalAlignment="Stretch" Margin="0,5,0,0" />
                <views:StorageUi />
                <views:GotFileList HorizontalAlignment="Stretch" MaxHeight="150" Margin="0,5,0,0"/>
            </StackPanel>
        </ScrollViewer>
        <Grid Grid.Column="1">
            <Label Content="{Binding DsHeading}" HorizontalAlignment="Center" VerticalAlignment="Top" />
            <views:PlotControl x:Name="WpfPlot1"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0,20,0,0" />
            <views:TabAbout x:Name="TAbout" 
                  VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,50,54,0" />
            <views:MiniShow x:Name="MiniShow" Visibility="{Binding ShowMiniPlots, Converter={StaticResource BoolVisConverter}}"
                            VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,80,64,0" />
        </Grid>
        <StackPanel Grid.Column="2" Orientation="Vertical">
            <views:YAxisDb />
            <views:YAxisPerc />
            <views:XAxisHz />
            <Expander Header="—— Graph Data"  IsExpanded="{Binding ExpandGraphData}" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <CheckBox Content="Magnitude" IsChecked="{Binding ShowMagnitude}" Grid.Row="0"  />
                    <!--<CheckBox Content="Phase" IsChecked="{Binding ShowPhase}" Grid.Row="1"  />-->
                    <CheckBox Content="THD" IsChecked="{Binding ShowTHD}" Grid.Row="1" Grid.Column="0"  />
                    <CheckBox Content="THD+N" IsChecked="{Binding ShowTHDN}" Grid.Row="2" Grid.Column="0"  />
                    <CheckBox Content="Noise Density" IsChecked="{Binding ShowNoise}" Grid.Row="3" Grid.Column="0"  />
                    <CheckBox Content="Tab Info" ToolTip="{Binding TabInfoTip}"
                              IsChecked="{Binding ShowTabInfo}" Grid.Row="4" Grid.Column="0"  />
                    <CheckBox Content="Mini-Plots" ToolTip="{Binding MiniPlotsTip}"
                              IsChecked="{Binding KeepMiniPlots}" Grid.Row="5" Grid.Column="0"  />
                </Grid>
            </Expander>

            <Expander Header="—— Options"  IsExpanded="{Binding ExpandGraphOptions}" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <CheckBox Content="Left Channel" IsChecked="{Binding ShowLeft}" Grid.Row="0"  />
                    <CheckBox Content="Right Channel" IsChecked="{Binding ShowRight}" Grid.Row="1"  />
                    <CheckBox Content="Thick Lines" IsChecked="{Binding ShowThickLines}" Grid.Row="2"  />
                    <CheckBox Content="Data Points" IsChecked="{Binding ShowPoints}" Grid.Row="3"  />
                </Grid>
            </Expander>

            <views:GroupHeader Header="Cursor" />
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Label Content="Frequency" Grid.Row="0" Grid.Column="0" IsEnabled="{Binding IsTracking}" />
                <Label Content="{Binding FreqShow}" Grid.Row="0" Grid.Column="1" IsEnabled="{Binding IsTracking}" Width="70" />
                <TextBox Text="{Binding ZValue}" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" TextWrapping="Wrap" AcceptsReturn="True" Width="120" HorizontalAlignment="Left" />
            </Grid>

        </StackPanel>
    </Grid>
</UserControl>
