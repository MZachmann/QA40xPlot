<UserControl x:Class="QA40xPlot.PlotPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QA40xPlot"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="TextBox">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>
    <Grid Height="Auto" Width="Auto">
        <GroupBox Header="Measurement Settings" >
            <Grid HorizontalAlignment="Left" VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Label Content="Set generator by" Grid.Column="0" Grid.Row="0"  />
                <Label Content="Gen voltage" Grid.Column="0"  Grid.Row="1"   />
                <Label Content="Amplifier Load" Grid.Column="0"  Grid.Row="2"  />
                <Label Content="Output Power" Grid.Column="0"  Grid.Row="3"  />
                <TextBox Text="New TextBox" Grid.Column="1" Grid.Row="3" />
                <Label Content="Output Voltage" Grid.Column="0" Grid.Row="4"   />
                <Label Content="Start Frequency" Grid.Column="0"  Grid.Row="5"  />
                <Label Content="End Frequency" Grid.Column="0"  Grid.Row="6"  />
                <Label Content="Steps / Octave" Grid.Column="0"  Grid.Row="7"  />
                <Label Content="Averages" Grid.Column="0"  Grid.Row="8"  />
                <CheckBox Content="Left channel" Grid.Column="0"  Grid.Row="9"  />
                <TextBox Text="Set generator by more" Grid.Column="1" Grid.ColumnSpan="2"  Grid.Row="0"  />
                <TextBox Text="Gen voltage" Grid.Column="1"  Grid.Row="1"   />
                <TextBox Text="Amplifier Load" Grid.Column="1"  Grid.Row="2"  />
                <TextBox Text="Output Power"  Grid.Column="1" Grid.Row="3"   />
                <TextBox Text="Output Voltage" Grid.Column="1" Grid.Row="4"  />
                <TextBox Text="Start Frequency" Grid.Column="1" Grid.Row="5"   />
                <TextBox Text="End Frequency" Grid.Column="1" Grid.Row="6"   />
                <TextBox Text="Steps / Octave" Grid.Column="1" Grid.Row="7"  />
                <TextBox Text="Averages" Grid.Column="1" Grid.Row="8"  />
                <CheckBox Content="Right channel" Grid.Column="1" Grid.Row="9"  />
                <Label Content="dbv" Grid.Column="2" Grid.Row="1"  />
                <Label Content="Ohm" Grid.Column="2" Grid.Row="2"  />
                <Label Content="Watt" Grid.Column="2" Grid.Row="3"  />
                <Label Content="dbv" Grid.Column="2" Grid.Row="4"  />
                <Label Content="Hz" Grid.Column="2" Grid.Row="5"  />
                <Label Content="Hz" Grid.Column="2" Grid.Row="6"  />
            </Grid>
    </GroupBox>
    </Grid>
</UserControl>
