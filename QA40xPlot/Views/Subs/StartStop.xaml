<UserControl x:Class="QA40xPlot.Views.StartStop"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QA40xPlot.Views"
             mc:Ignorable="d" x:Name="MyStartStop"
             d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel Margin="5,10,5,3" Orientation="Vertical">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content=" Run " IsEnabled="{Binding MainVm.IsNotRunning}" Margin="0,0,10,0"
                    Visibility="{Binding ShowRun, ElementName=MyStartStop, Converter={StaticResource BoolVisConverter}}"
                    Command="{Binding DoRun}" 
                    ToolTip="Run repeatedly (F5)"
                    FontSize="14" HorizontalAlignment="Right"></Button>
            <Button Content=" Start " ToolTip="Start the test (F6)"
                    Visibility="{Binding ShowStart, ElementName=MyStartStop, Converter={StaticResource BoolVisConverter}}"
                    IsEnabled="{Binding MainVm.IsNotRunning}" FontSize="14" Command="{Binding DoStart}"  HorizontalAlignment="Right"></Button>
            <Button Content=" Stop " Margin="10,0,0,0" ToolTip="Stop the test (F7)"
                    IsEnabled="{Binding MainVm.IsRunning}" FontSize="14" Command="{Binding DoStop}"  HorizontalAlignment="Left"></Button>
        </StackPanel>
    </StackPanel>
</UserControl>
