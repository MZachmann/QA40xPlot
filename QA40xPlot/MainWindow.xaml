<Window x:Class="QA40xPlot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:QA40xPlot.Views"
        xmlns:local="clr-namespace:QA40xPlot"
        mc:Ignorable="d"
        Title="Qa40xPlot" Height="800" Width="1600" Background="{Binding Background, Mode=OneWay}"
        ThemeMode="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="0" >
                <Button Content="QA430" Click="OnQA430" Margin="4,2,4,2" Visibility="{Binding ShowQA430, Converter={StaticResource BoolVisConverter}}">
                    <Button.ToolTip>
                        <ToolTip Content="Show/hide the QA430 Configuration" />
                    </Button.ToolTip>
                </Button>
                <Button Content="Help" Click="OnHelp" Margin="4,2,4,2">
                    <Button.ToolTip>
                        <ToolTip Content="Show help file" />
                    </Button.ToolTip>
                </Button>
                <Button Content="Photo" Command="{Binding DoPhoto}" Margin="4,2,4,2">
                    <Button.ToolTip>
                        <ToolTip Content="Save a photo of the entire app" />
                    </Button.ToolTip>
                </Button>
                <Button Content="Export" Command="{Binding DoExport}" IsEnabled="{Binding CurrentView.HasExport}" Margin="4,2,4,2">
                    <Button.ToolTip>
                        <ToolTip Content="Export data to a text file" />
                    </Button.ToolTip>
                </Button>
                <Button Content="Save" Command="{Binding DoSaveCfg}" Margin="4,2,4,2">
                    <Button.ToolTip>
                        <ToolTip Content="Save current settings to file" />
                    </Button.ToolTip>
                </Button>
                <Button Content="Load" Command="{Binding DoLoadCfg}" Margin="4,2,4,2">
                    <Button.ToolTip>
                        <ToolTip Content="Open settings from a file" />
                    </Button.ToolTip>
                </Button>
            </StackPanel>
            <Label Grid.Row="0" Grid.Column="0" Content="{Binding ProgressMessage}"/>
            <ProgressBar Grid.Row="1" Grid.Column="0" Minimum="0" Maximum="100" MinHeight="5" Value="{Binding ProgressAmount}" />
        </Grid>
        <TabControl Grid.Row="2" SelectionChanged="OnNewTab"
                    SizeChanged="DoTabSizeChanged" >
            <TabItem Header="Spectrum" Name="spectrum"  MaxWidth="{Binding MaxTab}">
                <Grid Background="{Binding Background, Mode=OneWay}" >
                    <views:SpectrumPlotPage  />
                </Grid>
            </TabItem>
            <TabItem Header="Intermodulation" Name="intermod" MaxWidth="{Binding MaxTab}">
                <Grid Background="{Binding Background, Mode=OneWay}" >
                    <views:ImdPlotPage  />
                </Grid>
            </TabItem>
            <TabItem Header="Scope" Name="scope" MaxWidth="{Binding MaxTab}">
                <Grid Background="{Binding Background, Mode=OneWay}" >
                    <views:ScopePlotPage  />
                </Grid>
            </TabItem>
            <TabItem Header="THD vs Frequency" Name="tvf" MaxWidth="{Binding MaxTab}">
                <Grid Background="{Binding Background, Mode=OneWay}">
                    <views:ThdFreqPlotPage  />
                </Grid> 
            </TabItem>
            <TabItem Header="THD vs Amplitude" Name="tva" MaxWidth="{Binding MaxTab}">
                <Grid Background="{Binding Background, Mode=OneWay}">
                    <views:ThdAmpPlotPage  />
                </Grid>
            </TabItem>
            <TabItem Header="{Binding FreqRespHdr}" Name="freqresp"  MaxWidth="{Binding MaxTab}" >
                <Grid Background="{Binding Background, Mode=OneWay}">
                    <views:FreqRespPlotPage  />
                </Grid>
            </TabItem>
            <TabItem Header="Opamp.Freq" Name="freqsweep"  MaxWidth="{Binding MaxTab}"
                     Visibility="{Binding ShowQA430, Converter={StaticResource BoolVisConverter}}" >
                <Grid Background="{Binding Background, Mode=OneWay}">
                    <views:FreqSweepPlotPage  />
                </Grid>
            </TabItem>
            <TabItem Header="Opamp.Amp" Name="ampsweep"  MaxWidth="{Binding MaxTab}"
                     Visibility="{Binding ShowQA430, Converter={StaticResource BoolVisConverter}}" >
                <Grid Background="{Binding Background, Mode=OneWay}">
                    <views:AmpSweepPlotPage  />
                </Grid>
            </TabItem>
            <TabItem Header="Settings" Name="settings"  MaxWidth="{Binding MaxTab}">
                <Grid Background="{Binding Background, Mode=OneWay}">
                    <views:SettingsPage  />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
