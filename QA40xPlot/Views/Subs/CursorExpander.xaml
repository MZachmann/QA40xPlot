<UserControl x:Class="QA40xPlot.Views.CursorExpander"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QA40xPlot.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Expander Header="—— Cursor"  IsExpanded="{Binding ExpandCursor}" >
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Label Content="{Binding Head, RelativeSource={RelativeSource AncestorType=local:CursorExpander}}" Grid.Row="0" Grid.Column="0" IsEnabled="{Binding IsTracking}" />
            <Label Content="{Binding FreqShow}" Grid.Row="0" Grid.Column="1" IsEnabled="{Binding IsTracking}" Width="70" />
            <TextBox Text="{Binding ZValue}" Grid.Row="1" Grid.Column="0" 
                     Grid.ColumnSpan="2" TextWrapping="Wrap" IsReadOnly="True"
                     Width="140" HorizontalAlignment="Left" />
        </Grid>
    </Expander>
</UserControl>
