<UserControl x:Class="QA40xPlot.Views.MiniShow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QA40xPlot.Views"
             mc:Ignorable="d" 
             Background="{Binding ThemeBackground}"
            MouseDown="OnWindMouseDown" MouseUp="OnWindMouseUp" MouseMove="OnWindMouseMove"
             Loaded="Minishow_Loaded"
             d:DesignHeight="750" d:DesignWidth="450">
    <Border BorderBrush="LightGreen" BorderThickness="1">
        <StackPanel Orientation="Vertical">
            <local:PlotControl x:Name="WpfPlot2" Width="300" Height="200" Margin="0,4,0,0" />
            <local:PlotControl x:Name="WpfPlot3" Width="300"  Height="200" Margin="0,4" />
        </StackPanel>
    </Border>
</UserControl>
