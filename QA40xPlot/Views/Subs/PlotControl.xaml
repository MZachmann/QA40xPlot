<UserControl x:Class="QA40xPlot.Views.PlotControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ScottPlot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
             xmlns:local="clr-namespace:QA40xPlot"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" >
    <Grid>
        <ScottPlot:WpfPlot x:Name="TheWpfPlot" Margin="5,10,5,5" />
        <Label Content="{Binding DsHeading}" HorizontalAlignment="Right" 
                   FontSize="16" x:Name="MyLabel"
                   Visibility="Visible"
                   VerticalAlignment="Top" Margin="0,22,40,0"  />
    </Grid>
</UserControl>
