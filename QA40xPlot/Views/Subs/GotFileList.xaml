<UserControl x:Class="QA40xPlot.Views.GotFileList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QA40xPlot.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ListBox ItemsSource="{Binding OtherSetList}" >
                <ListBox.ItemTemplate>
                    <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                            <Label Content="{Binding Name}" ToolTip="{Binding FileName}"  
                                   Grid.Row="0" Grid.Column="0"
                                   MaxWidth="100" Margin="0" Padding="2" HorizontalAlignment="Left"/>
                        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1">
                            <Button Click="OnEdit" CommandParameter="{Binding Id}" ToolTip="Edit" >
                                <Button.Content>
                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE70F;" FontSize="11"/>
                                </Button.Content>
                             </Button>
                            <Button Click="OnRemove" CommandParameter="{Binding Id}" ToolTip="Remove this entry" Margin="4,0,0,0" >
                                <Button.Content>
                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE74D;" FontSize="11"/>
                                </Button.Content>
                            </Button>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,4,0,0">
                            <CheckBox Click="ForceRepaint" ToolTip="Show the left trace" MinWidth="35" CommandParameter="{Binding Id}" Content="L" IsChecked="{Binding IsOnL}" />
                            <local:ColorBox Color="{Binding LeftColor}" ToolTip="Click to set the left color. Transparent==Use Default" Width="20" Margin="0,0,6,0"  />
                            <Label Content="    " Margin="0" Padding="0" />
                            <CheckBox Click="ForceRepaint" ToolTip="Show the right trace" MinWidth="35" CommandParameter="{Binding Id}" Content="R" IsChecked="{Binding IsOnR}"  />
                            <local:ColorBox Color="{Binding RightColor}" ToolTip="Click to set the right color. Transparent==Use Default" Margin="0,0,6,0"  Width="20"/>
                        </StackPanel>
                    </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
    </ScrollViewer>
</UserControl>
