<UserControl x:Class="QA40xPlot.Views.Intro430"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QA40xPlot.Views"
             xmlns:views="clr-namespace:QA40xPlot.Views"
             d:Background="AliceBlue"
             mc:Ignorable="d" 
             x:Name="MyIntro430"
             d:DesignHeight="450" d:DesignWidth="800">
    <Expander Header="—— Variables" IsExpanded="{Binding ExpandVars}" 
              Visibility="{Binding HasQA430, Converter={StaticResource BoolVisConverter}}"  >
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{Binding LeftWidth}" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" MinWidth="10" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <!-- do this strange StackPanel thing because dark mode messes up the checkbox alignments -->
            <Label Content="_Load" HorizontalAlignment="Right" Grid.Row="0" Grid.Column="0" 
                   Target="{Binding ElementName=CmLoad, Path=ValueComboBox}" VerticalAlignment="Center" />
            <views:ComboDrop TheText="{Binding LoadSummary}" TheSource="{Binding QaLoads}" TheTitle="Load"
                                         IsEditable="False" Grid.Column="1" x:Name="CmLoad"
                                         />
            <Label Content="_Gain" HorizontalAlignment="Right" Grid.Row="1" Grid.Column="0" 
                   Visibility="{Binding ShowGain, ElementName=MyIntro430, Converter={StaticResource BoolVisConverter}}"
                   Target="{Binding ElementName=CmGain, Path=ValueComboBox}" VerticalAlignment="Center" />
            <views:ComboDrop TheText="{Binding GainSummary}" TheSource="{Binding QaGains}" TheTitle="Gain"
                            Visibility="{Binding ShowGain, ElementName=MyIntro430, Converter={StaticResource BoolVisConverter}}"
                            IsEditable="False" x:Name="CmGain"
                            Grid.Row="1" Grid.Column="1" 
                            />
            <Label Content="_Supply" HorizontalAlignment="Right" Grid.Row="2" Grid.Column="0" 
                   Target="{Binding ElementName=CmSupply, Path=ValueComboBox}" VerticalAlignment="Center" />
            <views:ComboDrop TheText="{Binding SupplySummary}" TheSource="{Binding GenVoltages}" TheTitle="Supply"
                                         IsEditable="True" x:Name="CmSupply"
                                         Grid.Row="2" Grid.Column="1" 
                                         />
            <Label Content="V" Grid.Row="2" Grid.Column="2" />
            <CheckBox Content="Use Distortion Gain" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Right"
                   Visibility="{Binding ShowGain, ElementName=MyIntro430, Converter={StaticResource BoolVisConverter}}"
                      IsChecked="{Binding UseHighDistortion}" ToolTip="Use the configurations with distortion gain." Margin="0,0,10,0" />
            <CheckBox Content="Deembed Source Distortion" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Right"
                      Visibility="Collapsed"
                      IsChecked="{Binding DeembedDistortion}" ToolTip="Subtract the measured generator distortion." Margin="0,0,10,0" />

        </Grid>
    </Expander>
</UserControl>
