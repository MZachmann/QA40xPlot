<UserControl x:Class="QA40xPlot.Views.FreqSweepPlotPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:QA40xPlot.Views"
             xmlns:local="clr-namespace:QA40xPlot"
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="800">
    <Grid Height="Auto" Width="Auto">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Hidden">
            <StackPanel Margin="0,1,1,0">
                <views:StartStop />
                <views:Attenuator AttnAtStart="False"  />
                <views:Intro430 />
                <Expander Header="—— Generator" IsExpanded="{Binding ExpandGenerator}"  >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="{Binding LeftWidth}" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Label Content="Set _DUT" Target="{Binding ElementName=cbDUT}" HorizontalAlignment="Right" 
                           VerticalAlignment="Center" Grid.Column="0" Grid.Row="0" ToolTip="{Binding DutInfo}"  />
                        <ComboBox  Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="0"  
                              VerticalContentAlignment="Center"
                               ToolTip="{Binding DutDescript}" x:Name="cbDUT" 
                               SelectedValue="{Binding GenDirection}" ItemsSource="{Binding MeasureVoltsFull}"
                               IsEnabled="{Binding IsNotRunning}">
                        </ComboBox>
                        <Label Content="{Binding GenAmpDescript, Mode=OneWay}" Target="{Binding ElementName=cbTV, Path=ValueComboBox}" 
                           HorizontalAlignment="Right" VerticalAlignment="Center"  Grid.Column="0" Grid.Row="1" />
                        <views:ComboDrop TheText="{Binding VoltSummary}" TheSource="{Binding GenVoltages}" 
                                        IsEditable="True" x:Name="cbTV"  TheTitle="{Binding GenAmpDescript, Mode=OneWay}"
                                        Grid.Row="1" Grid.Column="1" 
                                        />
                        <views:VoltButton Grid.Row="1" Grid.Column="2" />
                    </Grid>
                </Expander>
                <Expander Header="—— Sweep" IsExpanded="{Binding ExpandSweep}"  >

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="{Binding LeftWidth}" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Label Content="S_tart Frequency" Target="{Binding ElementName=cbSF}"  HorizontalAlignment="Right" VerticalAlignment="Center"  Grid.Column="0" Grid.Row="0"  />
                        <ComboBox IsEditable="True" x:Name="cbSF" Text="{Binding StartFreq}" Grid.Column="1" Grid.Row="0" ItemsSource="{Binding StartFrequencies}"  
                              VerticalContentAlignment="Center"
                              />
                        <Label Content="Hz" Grid.Column="2" Grid.Row="0" VerticalAlignment="Center"  />
                        <Label Content="_End Frequency" Target="{Binding ElementName=cbEF}"  HorizontalAlignment="Right" VerticalAlignment="Center"  Grid.Column="0" Grid.Row="1"  />
                        <ComboBox IsEditable="True" x:Name="cbEF" Text="{Binding EndFreq}" Grid.Column="1" Grid.Row="1"  ItemsSource="{Binding EndFrequencies}"  
                              VerticalContentAlignment="Center"
                              />
                        <Label Content="Hz" Grid.Column="2" Grid.Row="1" VerticalAlignment="Center" />
                        <Label Content="Steps / _Octave" Target="{Binding ElementName=cbStO, Path=ValueTextBox}"  HorizontalAlignment="Right" VerticalAlignment="Center"  Grid.Column="0" Grid.Row="2"  />
                        <views:UpDownControl x:Name="cbStO" VerticalAlignment="Center"   Value="{Binding StepsOctave}" Minimum="1" Grid.Column="1" Grid.Row="2"  />
                    </Grid>
                </Expander>
                <views:SamplingExp />
                <views:SeeGlobals HorizontalAlignment="Stretch" Margin="0,5,0,0" />
                <views:StorageUi />
                <views:GotFileList HorizontalAlignment="Stretch" MaxHeight="150" Margin="0,5,0,0"/>
            </StackPanel>
        </ScrollViewer>
        <Grid Grid.Column="1">
            <views:PlotControl x:Name="WpfPlot1"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
            <views:TabAbout x:Name="TAbout" 
                  VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,180,34,0" />
            <views:MiniShow x:Name="MiniShow" Visibility="{Binding ShowMiniPlots, Converter={StaticResource BoolVisConverter}}"
                            VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,80,64,0" />
            <views:LegendWnd x:Name="LegendWindow" Visibility="{Binding ShowLegend, Converter={StaticResource BoolVisConverter}}"
                VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,70,40,0" />
        </Grid>
        <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Hidden">
            <StackPanel Orientation="Vertical">
            <views:YAxisDb />
            <views:YAxisPerc />
            <views:XAxisHz />
            <Expander Header="—— Graph Data"  IsExpanded="{Binding ExpandGraphData}" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                        <CheckBox Content="Magnitude" IsChecked="{Binding ShowMagnitude}" Grid.Row="0"  />
                        <Button Content="&#x2714;" Width="26" Height="16" 
                                Padding="0,-4,0,0"
                                VerticalContentAlignment="Top" FontSize="12" BorderBrush="Gray"
                                Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right"
                                Command="{Binding SelectAll}"  />
                        <Button Content="&#x2610;" Width="26" Height="16"
                                Padding="0,-4,0,0"
                                VerticalAlignment="Center" FontSize="12" BorderBrush="Gray"
                                Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right"
                                Command="{Binding SelectNone}" />
                        <CheckBox Content="Noise Density" IsChecked="{Binding ShowNoise}" Grid.Row="1" Grid.Column="0"  />
                        <CheckBox Content="Noise Floor" IsChecked="{Binding ShowNoiseFloor}" Grid.Row="2" Grid.Column="0"  />
                        <CheckBox Content="THD" IsChecked="{Binding ShowTHD}" Grid.Row="3" Grid.Column="0"  />
                        <CheckBox Content="THD+N" IsChecked="{Binding ShowTHDN}" Grid.Row="3" Grid.Column="1"  />
                        <CheckBox Content="D2" IsChecked="{Binding ShowD2}" Grid.Row="4" Grid.Column="0"  />
                        <CheckBox Content="D3" IsChecked="{Binding ShowD3}" Grid.Row="4" Grid.Column="1"  />
                        <CheckBox Content="D4" IsChecked="{Binding ShowD4}" Grid.Row="5"  Grid.Column="0" />
                        <CheckBox Content="D5" IsChecked="{Binding ShowD5}" Grid.Row="5" Grid.Column="1" />
                        <CheckBox Content="D6+" IsChecked="{Binding ShowD6}" Grid.Row="6" Grid.Column="0" />
                    </Grid>
            </Expander>

            <Expander Header="—— Options"  IsExpanded="{Binding ExpandGraphOptions}" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                        <CheckBox Content="Test Info" ToolTip="{Binding TabInfoTip}"
                                  IsChecked="{Binding ShowTabInfo}" Grid.Row="0" Grid.Column="0"  />
                        <CheckBox Content="Mini-Plots" ToolTip="{Binding MiniPlotsTip}"
                                  IsChecked="{Binding KeepMiniPlots}" Grid.Row="1" Grid.Column="0"  />
                        <CheckBox Content="Legend" ToolTip="{Binding ShowLegendTip}"
                                IsChecked="{Binding ShowLegend}" Grid.Row="2" Grid.Column="0"  />
                        <CheckBox Content="Thick Lines" IsChecked="{Binding ShowThickLines}" Grid.Row="3"  />
                        <CheckBox Content="Data Points" IsChecked="{Binding ShowPoints}" Grid.Row="4"  />
                        <CheckBox Content="Left Channel" IsChecked="{Binding ShowLeft}" Grid.Row="5"  />
                        <CheckBox Content="Right Channel" IsChecked="{Binding ShowRight}" Grid.Row="6"  />
                        <Button  Content="Edit Palette" Command="{Binding EditPaletteCommand}" Margin="12, 2" Grid.Row="7"></Button>
                    </Grid>
            </Expander>
            <views:CursorExpander />
            </StackPanel>
        </ScrollViewer>

    </Grid>
</UserControl>
