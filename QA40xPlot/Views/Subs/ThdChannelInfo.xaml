<UserControl x:Class="QA40xPlot.Views.ThdChannelInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QA40xPlot"
             xmlns:views ="clr-namespace:QA40xPlot.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="200" Background="MintCream">
    <UserControl.Resources>
        <views:VtoPctConverter x:Key="VToPctConverter"/>
        <views:VoltFormatter x:Key="VoltFormatter"/>
        <!-- hacky way to remove some white space from the labels -->
        <Style TargetType="Label">
            <Setter Property="Margin" Value="0,-4,0,0"/>
        </Style>
    </UserControl.Resources>
    <Border BorderBrush="LightGreen" BorderThickness="1">
        <StackPanel Orientation="Vertical">
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Grid.Column="0" Content="{Binding FundamentalFrequency}" ContentStringFormat="{}{0:F0} Hz"/>
                <Label Grid.Row="0" Grid.Column="1" Content="{Binding MyStep.Fundamental_dBV}" ContentStringFormat="{}{0:F2} dBV"/>
                <Label Grid.Row="0" Grid.Column="2" Content="{Binding MyStep.Fundamental_V, Converter={StaticResource VoltFormatter}}"/>
                <Label Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" Content="{Binding MyStep.Gain_dB}" ContentStringFormat="Gain {0:F2} dB"/>
                <Label Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" Content="{Binding MyStep.Total_W}" ContentStringFormat="{}{0:0.###} W"/>
            </Grid>
            <Rectangle HorizontalAlignment="Stretch" Height="3" Fill="DarkGreen" />
            <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Content="N:" HorizontalAlignment="Right"/>
                    <Label Grid.Row="0" Grid.Column="1" Content="{Binding MyStep.Average_NoiseFloor_dBV}" ContentStringFormat="{}{0:F2} dBV"/>
                <Label Grid.Row="0" Grid.Column="2" Content="{Binding MyStep.TotalNoiseFloor_V, Converter={StaticResource VoltFormatter}}" />

                    <Label Grid.Row="1" Grid.Column="0" Content="THD:" HorizontalAlignment="Right"/>
                    <Label Grid.Row="1" Grid.Column="1" Content="{Binding ThdIndB}" ContentStringFormat="{}{0:F2} dB"/>
                    <Label Grid.Row="1" Grid.Column="2" Content="{Binding ThdInPercent}" ContentStringFormat="{}{0:F5} %"/>
                
                    <Label Grid.Row="2" Grid.Column="0" Content="THD+N:" HorizontalAlignment="Right"/>
                    <Label Grid.Row="2" Grid.Column="1" Content="{Binding MyStep.Thd_dBN}" ContentStringFormat="{}{0:F2} dB"/>
                    <Label Grid.Row="2" Grid.Column="2" Content="{Binding MyStep.Thd_PercentN}" ContentStringFormat="{}{0:F5} %"/>
            </Grid>
            <Rectangle HorizontalAlignment="Stretch" Height="3" Fill="DarkGreen" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Grid.Column="0" Content="SNR:" HorizontalAlignment="Right"/>
                <Label Grid.Row="0" Grid.Column="1" Content="{Binding SNRatio}" ContentStringFormat="{}{0:F2} dB"/>
                <Label Grid.Row="0" Grid.Column="2" Content="ENOB:" HorizontalAlignment="Right"/>
                <Label Grid.Row="0" Grid.Column="3" Content="{Binding ENOB}" ContentStringFormat="{}{0:F1} bits"/>

                <Label Grid.Row="1" Grid.Column="0" Content="2nd:" HorizontalAlignment="Right"/>
                <Label Grid.Row="1" Grid.Column="2" Content="3rd:" HorizontalAlignment="Right"/>
                <Label Grid.Row="2" Grid.Column="0" Content="4th:" HorizontalAlignment="Right"/>
                <Label Grid.Row="2" Grid.Column="2" Content="5th:" HorizontalAlignment="Right"/>
                <Label Grid.Row="3" Grid.Column="0" Content="6th:" HorizontalAlignment="Right"/>

                <Label Grid.Row="1" Grid.Column="1" >
                    <MultiBinding Converter="{StaticResource VToPctConverter}">
                        <Binding Path="MyStep.Harmonics[0].Thd_Percent"/>
                        <Binding Path="MyStep.Harmonics[0].Amplitude_V"/>
                        <Binding Path="ShowDataPercents"/>
                    </MultiBinding>
                </Label>
                <Label Grid.Row="1" Grid.Column="3"  >
                    <MultiBinding Converter="{StaticResource VToPctConverter}">
                        <Binding Path="MyStep.Harmonics[1].Thd_Percent"/>
                        <Binding Path="MyStep.Harmonics[1].Amplitude_V"/>
                        <Binding Path="ShowDataPercents"/>
                    </MultiBinding>
                </Label>
                <Label Grid.Row="2" Grid.Column="1" >
                    <MultiBinding Converter="{StaticResource VToPctConverter}">
                        <Binding Path="MyStep.Harmonics[2].Thd_Percent"/>
                        <Binding Path="MyStep.Harmonics[2].Amplitude_V"/>
                        <Binding Path="ShowDataPercents"/>
                    </MultiBinding>
                </Label>
                <Label Grid.Row="2" Grid.Column="3" >
                    <MultiBinding Converter="{StaticResource VToPctConverter}">
                        <Binding Path="MyStep.Harmonics[3].Thd_Percent"/>
                        <Binding Path="MyStep.Harmonics[3].Amplitude_V"/>
                        <Binding Path="ShowDataPercents"/>
                    </MultiBinding>
                </Label>
                <Label Grid.Row="3" Grid.Column="1" >
                    <MultiBinding Converter="{StaticResource VToPctConverter}">
                        <Binding Path="MyStep.Harmonics[4].Thd_Percent"/>
                        <Binding Path="MyStep.Harmonics[4].Amplitude_V"/>
                        <Binding Path="ShowDataPercents"/>
                    </MultiBinding>
                </Label>
            </Grid>
    </StackPanel>
    </Border>
</UserControl>
