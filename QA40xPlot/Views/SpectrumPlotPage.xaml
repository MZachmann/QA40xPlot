<UserControl x:Class="QA40xPlot.Views.SpectrumPlotPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:QA40xPlot.Views"
             xmlns:vm="clr-namespace:QA40xPlot.ViewModels"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:local="clr-namespace:QA40xPlot"
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="800" >
    <UserControl.Resources>
        <views:EnumBooleanConverter x:Key="EnumBooleanConverter"/>
        <Style TargetType="Label">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>
    <Grid Height="Auto" Width="Auto">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Margin="0,1,1,0">
            <views:StartStop />
            <CheckBox Content="_Use Generator" IsChecked="{Binding UseGenerator}" 
                      HorizontalAlignment="Center"  Margin="0,5,0,0" />
            <views:Attenuator />
            <views:GroupHeader Header="Generator 1" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Label Content="Set _DUT" Target="{Binding ElementName=cbDUT}" HorizontalAlignment="Right"  Grid.Row="0" Grid.Column="0" ToolTip="{Binding DutInfo}"  />
                <ComboBox ToolTip="{Binding DutDescript}" x:Name="cbDUT"  Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="0" 
                            SelectedValue="{Binding GenDirection}" ItemsSource="{Binding MeasureVoltsFull}">
                </ComboBox>
                <Label Content="_Waveform" Target="{Binding ElementName=cbWave}"  HorizontalAlignment="Right" Grid.Row="1" Grid.Column="0" ToolTip="{Binding DutInfo}"  />
                <ComboBox x:Name="cbWave"  Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1"   
                              SelectedValue="{Binding Gen1Waveform}" ItemsSource="{Binding Waveforms}">
                </ComboBox>
                <Label Content="Fre_quency" HorizontalAlignment="Right" Grid.Row="2" Grid.Column="0" Target="{Binding ElementName=cbFreq}" />
                <ComboBox x:Name="cbFreq" Grid.Column="1" Grid.Row="2"   
                               IsEditable="True" Text="{Binding Gen1Frequency}" ItemsSource="{Binding GenFrequencies}" MinWidth="80"/>
                <Label Content="Hz" Grid.Row="2" Grid.Column="2" />
                <Label Content="{Binding GenAmpDescript, Mode=OneWay}"  Target="{Binding ElementName=cbVolt}" HorizontalAlignment="Right" Grid.Row="3" Grid.Column="0"  />
                <ComboBox x:Name="cbVolt" Grid.Column="1" Grid.Row="3"   
                              IsEditable="True" Text="{Binding Gen1Voltage}" ItemsSource="{Binding GenVoltages}"/>
                <Label Content="{Binding GenAmpUnits, Mode=OneWay}" Grid.Row="3" Grid.Column="3" />
            </Grid>

            <views:GroupHeader Header="Sampling" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Label Content="_Sample Rate" HorizontalAlignment="Right" Grid.Row="0" Grid.Column="0"  Target="{Binding ElementName=cbSampleRate}"  />
                <ComboBox x:Name="cbSampleRate"  Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="0"   
                               SelectedValue="{Binding SampleRate}" ItemsSource="{Binding SampleRates}">
                </ComboBox>
                <Label Content="_Fft Size" HorizontalAlignment="Right" Grid.Row="1" Grid.Column="0" Target="{Binding ElementName=cbfftSize}"  />
                <ComboBox x:Name="cbfftSize"  Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1"   
                               SelectedValue="{Binding FftSize}" ItemsSource="{Binding FftSizes}">
                </ComboBox>
                <Label Content="_Averages" HorizontalAlignment="Right" Grid.Column="0" Grid.Row="2" Target="{Binding ElementName=xcaverages}"  />
                <xctk:IntegerUpDown x:Name="xcaverages" Value="{Binding Averages}" Minimum="1" Maximum="{Binding MaxAverages}" VerticalAlignment="Center" Grid.Column="1" Grid.Row="2"  />

                <Label Content="_Window" HorizontalAlignment="Right" Grid.Row="3" Grid.Column="0" Target="{Binding ElementName=cbWindow}"  />
                <ComboBox x:Name="cbWindow" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="3"   
                               SelectedValue="{Binding WindowingMethod}" ItemsSource="{Binding WindowingTypes}">
                </ComboBox>
            </Grid>
            <views:StorageUi />
            <views:GotFileList x:Name="GotList"  HorizontalAlignment="Stretch" MaxHeight="100" Margin="0,5,0,0"/>
        </StackPanel>
        <Grid Grid.Column="1">
            <Label Content="{Binding DsHeading}" HorizontalAlignment="Center" VerticalAlignment="Top" />
            <views:PlotControl x:Name="WpfPlot1"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0,20,0,0" />
            <views:ThdChannelInfo x:Name="Info1" 
                  VerticalAlignment="Top" HorizontalAlignment="Left" Margin="60,70,0,0" />
            <views:ThdChannelInfo x:Name="Info2" 
                  VerticalAlignment="Top" HorizontalAlignment="Left" Margin="60,300,0,0" />
            <views:TabAbout x:Name="TAbout" 
                  VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,70,34,0" />
        </Grid>
        <StackPanel Grid.Column="2" Orientation="Vertical">
            <views:YAxisDb />
            <views:YAxisPerc />
            <views:XAxisHz />
            <views:GroupHeader Header="Graph Data"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <CheckBox Content="Summary Data" IsChecked="{Binding ShowSummary}" Grid.Row="0"  />
                <CheckBox Content="Tab Info" IsChecked="{Binding ShowTabInfo}" Grid.Row="1"  />
                <CheckBox Content="Harmonic Markers" IsChecked="{Binding ShowMarkers}" Grid.Row="2"  />
                <CheckBox Content="Power Markers" IsChecked="{Binding ShowPowerMarkers}" Grid.Row="3"  />
            </Grid>

            <views:GroupHeader Header="Options"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <CheckBox Content="Left Channel" IsChecked="{Binding ShowLeft}" Grid.Row="0"  />
                <CheckBox Content="Right Channel" IsChecked="{Binding ShowRight}" Grid.Row="1"  />
                <CheckBox Content="% - Data Summary" IsChecked="{Binding ShowDataPercent}" Grid.Row="4"  />
                <CheckBox Content="Thick Lines" IsChecked="{Binding ShowThickLines}" Grid.Row="5"  />
            </Grid>

            <views:GroupHeader Header="Cursor" />
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Label Content="Frequency" Grid.Row="0" Grid.Column="0" IsEnabled="{Binding IsTracking}" />
                <Label Content="{Binding FreqShow}" Grid.Row="0" Grid.Column="1" IsEnabled="{Binding IsTracking}" Width="70" />
                <TextBox Text="{Binding ZValue}" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" TextWrapping="Wrap" AcceptsReturn="True" Width="120" HorizontalAlignment="Left" />
            </Grid>

        </StackPanel>
    </Grid>
</UserControl>
