<UserControl x:Class="QA40xPlot.Views.ImdChannelInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QA40xPlot"
             xmlns:views ="clr-namespace:QA40xPlot.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="200" Background="MintCream">
    <UserControl.Resources>
        <views:VtoPctConverter x:Key="VToPctConverter"/>
        <views:VoltFormatter x:Key="VoltFormatter"/>
        <!-- hacky way to remove some white space from the labels -->
        <Style TargetType="Label">
            <Setter Property="Margin" Value="0,-4,0,0"/>
        </Style>
    </UserControl.Resources>
    <Border BorderBrush="LightGreen" BorderThickness="1">
        <StackPanel Orientation="Vertical">
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Grid.Column="0" Content="{Binding Gen1F}" ContentStringFormat="{}{0:F0} Hz"/>
                <Label Grid.Row="0" Grid.Column="1" Content="{Binding MyStep.Fundamental1_dBV}" ContentStringFormat="{}{0:F2} dBV"/>
                <Label Grid.Row="0" Grid.Column="2" Content="{Binding MyStep.Fundamental1_V}" ContentStringFormat="{}{0:F4} VRMS"/>
                <Label Grid.Row="1" Grid.Column="0" Content="{Binding Gen2F}" ContentStringFormat="{}{0:F0} Hz"/>
                <Label Grid.Row="1" Grid.Column="1" Content="{Binding MyStep.Fundamental2_dBV}" ContentStringFormat="{}{0:F2} dBV"/>
                <Label Grid.Row="1" Grid.Column="2" Content="{Binding MyStep.Fundamental2_V}" ContentStringFormat="{}{0:F4} VRMS"/>
                <Label Grid.Row="2" Grid.Column="0" Content="{Binding MyStep.Fundamentals_dBV}" ContentStringFormat="{}{0:F2} dBV"/>
                <Label Grid.Row="2" Grid.Column="1" Content="{Binding MyStep.Total_V}" ContentStringFormat="{}{0:F4} VRMS"/>
                <Label Grid.Row="2" Grid.Column="2" Content="{Binding MyStep.Total_W}" ContentStringFormat="{}{0:0.###} W"/>
                <Label Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Center" Content="{Binding MyStep.Gain_dB}" ContentStringFormat="Gain {0:F2} dB"/>
            </Grid>
            <Rectangle HorizontalAlignment="Stretch" Height="3" Fill="DarkGreen" />
            <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Content="N:" HorizontalAlignment="Right"/>
                    <Label Grid.Row="0" Grid.Column="1" Content="{Binding NoiseFloordBV}" ContentStringFormat="{}{0:F2} dBV"/>
                    <Label Grid.Row="0" Grid.Column="2" Content="{Binding MyStep.TotalNoiseFloor_V, Converter={StaticResource VoltFormatter}}" />

                    <Label Grid.Row="1" Grid.Column="0" Content="IMD:" HorizontalAlignment="Right"/>
                    <Label Grid.Row="1" Grid.Column="1" Content="{Binding ThdIndB}" ContentStringFormat="{}{0:F2} dB"/>
                    <Label Grid.Row="1" Grid.Column="2" Content="{Binding ThdInPercent}" ContentStringFormat="{}{0:F5} %"/>
               
            </Grid>
            <Rectangle HorizontalAlignment="Stretch" Height="3" Fill="DarkGreen" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Grid.Column="0" Content="SNR:" HorizontalAlignment="Right"/>
                <Label Grid.Row="0" Grid.Column="1" Content="{Binding SNRatio}" ContentStringFormat="{}{0:F2} dB"/>
                <Label Grid.Row="0" Grid.Column="2" Content="ENOB:" HorizontalAlignment="Right"/>
                <Label Grid.Row="0" Grid.Column="3" Content="{Binding ENOB}" ContentStringFormat="{}{0:F1} bits"/>

                <Label Grid.Row="1" Grid.Column="0" Content="DFD2:" HorizontalAlignment="Right"/>
                <Label Grid.Row="1" Grid.Column="1" >
                    <MultiBinding Converter="{StaticResource VToPctConverter}">
                        <Binding Path="MyStep.Harmonics[0].Thd_Percent"/>
                        <Binding Path="MyStep.Harmonics[0].Amplitude_V"/>
                        <Binding Path="ShowDataPercents"/>
                    </MultiBinding>
                </Label>
                <Label Grid.Row="1" Grid.Column="2" Content="DFD3:" HorizontalAlignment="Right"/>
                <Label Grid.Row="1" Grid.Column="3">
                    <MultiBinding Converter="{StaticResource VToPctConverter}">
                        <Binding Path="MyStep.Harmonics[1].Thd_Percent"/>
                        <Binding Path="MyStep.Harmonics[1].Amplitude_V"/>
                        <Binding Path="ShowDataPercents"/>
                    </MultiBinding>
                </Label>


                <Label Grid.Row="2" Grid.Column="0" Content="D2L:" HorizontalAlignment="Right"/>
                <Label Grid.Row="2" Grid.Column="1">
                    <MultiBinding Converter="{StaticResource VToPctConverter}">
                        <Binding Path="MyStep.Harmonics[2].Thd_Percent"/>
                        <Binding Path="MyStep.Harmonics[2].Amplitude_V"/>
                        <Binding Path="ShowDataPercents"/>
                    </MultiBinding>
                </Label>

                <Label Grid.Row="2" Grid.Column="2" Content="D2H:" HorizontalAlignment="Right"/>
                <Label Grid.Row="2" Grid.Column="3">
                    <MultiBinding Converter="{StaticResource VToPctConverter}">
                        <Binding Path="MyStep.Harmonics[3].Thd_Percent"/>
                        <Binding Path="MyStep.Harmonics[3].Amplitude_V"/>
                        <Binding Path="ShowDataPercents"/>
                    </MultiBinding>
                </Label>


                <Label Grid.Row="3" Grid.Column="0" Content="D3L:" HorizontalAlignment="Right"/>
                <Label Grid.Row="3" Grid.Column="1">
                    <MultiBinding Converter="{StaticResource VToPctConverter}">
                        <Binding Path="MyStep.Harmonics[4].Thd_Percent"/>
                        <Binding Path="MyStep.Harmonics[4].Amplitude_V"/>
                        <Binding Path="ShowDataPercents"/>
                    </MultiBinding>
                </Label>

                <Label Grid.Row="3" Grid.Column="2" Content="D3H:" HorizontalAlignment="Right"/>
                <Label Grid.Row="3" Grid.Column="3" >
                    <MultiBinding Converter="{StaticResource VToPctConverter}">
                    <Binding Path="MyStep.Harmonics[5].Thd_Percent"/>
                    <Binding Path="MyStep.Harmonics[5].Amplitude_V"/>
                    <Binding Path="ShowDataPercents"/>
                    </MultiBinding>
                </Label>


                <Label Grid.Row="4" Grid.Column="0" Content="D4L:" HorizontalAlignment="Right"/>
                <Label Grid.Row="4" Grid.Column="1" >
                    <MultiBinding Converter="{StaticResource VToPctConverter}">
                        <Binding Path="MyStep.Harmonics[6].Thd_Percent"/>
                        <Binding Path="MyStep.Harmonics[6].Amplitude_V"/>
                        <Binding Path="ShowDataPercents"/>
                    </MultiBinding>
                </Label>

                <Label Grid.Row="4" Grid.Column="2" Content="D4H:" HorizontalAlignment="Right"/>
                <Label Grid.Row="4" Grid.Column="3">
                    <MultiBinding Converter="{StaticResource VToPctConverter}">
                        <Binding Path="MyStep.Harmonics[7].Thd_Percent"/>
                        <Binding Path="MyStep.Harmonics[7].Amplitude_V"/>
                        <Binding Path="ShowDataPercents"/>
                    </MultiBinding>
                </Label>


                <Label Grid.Row="5" Grid.Column="0" Content="D5L:" HorizontalAlignment="Right"/>
                <Label Grid.Row="5" Grid.Column="1">
                    <MultiBinding Converter="{StaticResource VToPctConverter}">
                        <Binding Path="MyStep.Harmonics[8].Thd_Percent"/>
                        <Binding Path="MyStep.Harmonics[8].Amplitude_V"/>
                        <Binding Path="ShowDataPercents"/>
                    </MultiBinding>
                </Label>

                <Label Grid.Row="5" Grid.Column="2" Content="D5H:" HorizontalAlignment="Right"/>
                <Label Grid.Row="5" Grid.Column="3">
                    <MultiBinding Converter="{StaticResource VToPctConverter}">
                        <Binding Path="MyStep.Harmonics[9].Thd_Percent"/>
                        <Binding Path="MyStep.Harmonics[9].Amplitude_V"/>
                        <Binding Path="ShowDataPercents"/>
                    </MultiBinding>
                </Label>
            </Grid>
    </StackPanel>
    </Border>
</UserControl>
