<UserControl x:Class="QA40xPlot.Views.VoltButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QA40xPlot.Views"
             mc:Ignorable="d" 
             x:Name="MyVButton"
             d:DesignHeight="450" d:DesignWidth="800">
    <Button BorderThickness="1,1,1,1" Margin="2,0,0,0" Command="{Binding ShowMenuCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Self}}"
                                Background="{Binding BkgColor, ElementName=MyVButton}"
                                BorderBrush="{Binding BrdrColor, ElementName=MyVButton}" 
                            MinWidth="20"
                            Content="{Binding GenVoltageUnit, Mode=TwoWay}" VerticalAlignment="Center"  Grid.Row="4" Grid.Column="2">
    </Button>
</UserControl>
